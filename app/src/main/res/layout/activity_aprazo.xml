<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.ricardomendes.compras.AprazoActivity">

    <ImageView
        android:id="@+id/comprasimg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/compras"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btCalcular"
        />

    <ImageView
        android:id="@+id/imgJuros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/perc"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/editTextQtde"
        app:layout_constraintRight_toLeftOf="@+id/editTextJuros"
        />
    <ImageView
        android:id="@+id/imgQtde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/parc"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/comprasimg"
        app:layout_constraintRight_toLeftOf="@+id/editTextQtde"
        />

    <EditText
        android:id="@+id/editTextQtde"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/qtdeparcelas"
        android:inputType="number"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="30dp"
        android:theme="@style/Editextcolor"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comprasimg" />
    <EditText
        android:id="@+id/editTextJuros"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:hint="@string/juros"
        android:textSize="30dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:theme="@style/Editextcolor"
        app:layout_constraintTop_toBottomOf="@id/editTextQtde"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageButton
        android:id="@+id/calculoParcelas"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_custom1"
        android:src="@drawable/button_ok"
        app:layout_constraintTop_toBottomOf="@id/editTextJuros"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/txtValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/calculoParcelas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/txtValorTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/txtValor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/txtQtde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/txtValorTotal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</android.support.constraint.ConstraintLayout>
